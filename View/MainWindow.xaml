

<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        Title="Sklep" Width="1280" Height="720">
    
    <Window.Resources>
        <Style TargetType="{x:Type ItemsControl}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>



    <Window.DataContext>
        <vm:ShopViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <!-- Guzik nad listą -->
            <Button Content="Wyjdź z aplikacji" Width="150" Height="40" Margin="10" HorizontalAlignment="Right"
                    Command="{Binding test}" />

            <!-- Lista produktów -->
            <ItemsControl ItemsSource="{Binding ObservableProducts}" BorderThickness="0">
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="5">
                                <StackPanel>
                                    <!-- Nazwa + opis -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductImage}" FontSize="16" FontWeight="Bold" />
                                        <TextBlock Text="{Binding ProductDescription}" FontSize="14"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>

                                    <!-- Obrazek -->
                                    <Image Source="{Binding ProductImage}" Width="200" Height="150" Stretch="Uniform" />
                                    
                                    <TextBlock>
                                        <Run Text="Pozostało sztuk: 2137" FontSize="14"/>
                                        <Run Text="{Binding tempiloscsztuk}"/>
                                    </TextBlock>

                                    <Button Content="Kup" Width="150" Height="40" Margin="10" Grid.Column="2" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>