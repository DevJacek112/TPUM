<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        Title="Sklep" Height="450" Width="800">

    <Window.DataContext>
        <vm:ShopViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <!-- Guzik nad listą -->
            <Button Content="Wyjdź z aplikacji" Width="150" Height="40" Margin="10" HorizontalAlignment="Right" Command="{Binding test}" />

            <!-- Lista produktów -->
            <ListView ItemsSource="{Binding ObservableProducts}" SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="{Binding ProductName}" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ProductDescription}" FontSize="14"/>
                            <Image Source="{Binding ProductImage}" Width="200" Height="150" Stretch="Uniform"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <Button Content="Kup" Width="150" Height="40" Margin="10" HorizontalAlignment="Right" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
